{
    "name": "jpoliveira08/inventory",
    "description": "A simple project to manage an inventory of products",
    "authors": [
        {
            "name": "jpoliveira08",
            "email": "joaopedro.oliveirajava@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Inventory\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12 app/",
        "test": "phpunit --colors tests/",
        "unit-test": "phpunit --colors tests/Unit/",
        "feature-test": "phpunit --colors tests/Feature/"
    }
}
